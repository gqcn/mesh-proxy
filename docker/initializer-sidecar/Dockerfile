# loads/mesh-proxy:init
FROM loads/alpine:3.8

LABEL maintainer="john@johng.cn"

###############################################################################
#                                INSTALLATION
###############################################################################

# 新增必要的依赖服务
RUN apk add iptables

# 执行入口文件添加
ADD ./*.sh /bin/
RUN chmod +x /bin/*.sh

###############################################################################
#                                   START
###############################################################################

CMD iptables.sh